{
	"compilerOptions": {
		"target": "ES2015",
		"module": "ES2015",
		"moduleResolution": "Node16",
		"baseUrl": ".",
		"paths": {
			"@assets/*": ["assets/"],
			"@components/*": ["components/*/index.js"],
			"@layouts/*": ["layouts/*/index.js"],
			"@utils/*": ["utils/*"]
		},
		"strictNullChecks": true,
		"strictFunctionTypes": true
	},
	"exclude": ["node_modules"]
}
