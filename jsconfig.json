{
	"compilerOptions": {
		"target": "ES2015",
		"module": "ES2015",
		"moduleResolution": "Node16",
		"baseUrl": ".",
		"paths": {
			"@components/*": ["components/*/index.jsx"],
			"@layouts/*": ["layouts/*/index.jsx"]
		},
		"strictNullChecks": true,
		"strictFunctionTypes": true
	},
	"exclude": ["node_modules", "**/node_modules/*", ".next", "out"]
}
